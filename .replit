
# .replit
run = "python3 main.py"
modules = ["python-3.10:v18-20230807-322e88b"]

[nix]
channel = "stable-22_11"

[env]
PYTHONPATH = "${REPL_HOME}/.pythonlibs/lib/python3.10/site-packages"
PYTHONUNBUFFERED = "1"
FLASK_DEBUG = "0"
REPLIT_PYTHON_PACKAGE_LAYER = "1"

[deployment]
run = [
  "sh",
  "-c",
  "pip install -r requirements-deploy.txt && gunicorn --workers 1 --threads 2 --timeout 180 --bind 0.0.0.0:$PORT deploy:app"
]
deploymentTarget = "gce"
ignorePorts = false

[[ports]]
localPort = 8080
externalPort = 80
